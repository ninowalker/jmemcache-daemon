            <id>thimbleware.repo</id>
            <name>ThimbleWare Repository</name>
            <url>scp://ryan@thimbleware.com//var/www/maven</url>
        </snapshotRepository>
    </distributionManagement>

    <scm>
        <connection>
            scm:hg:http://thimbleware.com/hg/jmemcached
        </connection>
        <developerConnection>
            scm:hg:file:///var/hg/jmemcached
        </developerConnection>
    </scm>
